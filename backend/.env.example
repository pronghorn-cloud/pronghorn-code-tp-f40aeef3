# Application Settings
PROJECT_NAME="Claims Processing Platform"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=True

# Security
# Generate a secure key: openssl rand -hex 32
SECRET_KEY="change-this-to-a-secure-random-key-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM="RS256"

# Database (PostgreSQL)
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/claims_db"

# Redis Cache
REDIS_URL="redis://localhost:6379/0"

# AWS S3 / Document Storage (Optional for local dev)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET_NAME="claims-documents"

# HIPAA & Compliance
PHI_ENCRYPTION_KEY="change-this-to-secure-key-for-phi"

# CORS (Comma separated origins)
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
